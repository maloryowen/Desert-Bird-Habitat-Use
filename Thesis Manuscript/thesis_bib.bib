journal = {Functional Ecology},
keywords = {Animals,Basal facilitation,Direct interactions,Herbivory,Indirect interactions,Pollination,Positive interactions,Protection,Seed dispersal,Seed trapping},
number = {1},
pages = {41--51},
title = {{Functional assessment of animal interactions with shrub-facilitation complexes: A formal synthesis and conceptual framework}},
