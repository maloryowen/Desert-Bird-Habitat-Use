journal = {Plant Ecology},
keywords = {Afterlife effects,Competition,Foundation species,Juniperus monosperma,Relative interaction index,Species richness,Understory vegetation},
number = {5},
pages = {733--741},
title = {{Drought-induced mortality of a foundation species (Juniperus monosperma) promotes positive afterlife effects in understory vegetation}},
