journal = {The Auk},
keywords = {Choix habitat,Cleptornis marchei,Comportement approvisionnement,Comportement social,Conducta abastecimiento,Conducta social,Foraging behavior,Habitat selection,Mariana Islands,Marianas,Mariannes,Micronesia,Micron{\'{e}}sie,Oceania,Oc{\'{e}}anie,Saipan,Selecci{\'{o}}n alojamiento,Social behavior,Zosteropidae,Zosterops conspicillatus},
number = {3},
pages = {500--505},
title = {{Foraging Behavior and Microhabitat Use of Two Species of White-Eyes (Zosteropidae) on Saipan, Micronesia}},
volume = {107},
year = {1990}
