journal = {Basic and Applied Ecology},
keywords = {Facilitation,Gambelia sila,Lizard habitat,Non-trophic interactions,Scat,Scat detection dogs,Shrubs},
pages = {51--61},
publisher = {Elsevier GmbH},
title = {{Non-trophic interactions in deserts: Facilitation, interference, and an endangered lizard species}},
