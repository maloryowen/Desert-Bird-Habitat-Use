journal = {Biological Conservation},
keywords = {Modelling,Nomadic birds,Patchy environment,Protected area design,Semi-arid,Stochastic environment},
number = {1-2},
pages = {105--112},
title = {{Modelling the size and distribution of protected areas for nomadic birds: Alaudidae in the Nama-Karoo, South Africa}},
