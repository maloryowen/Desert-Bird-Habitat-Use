journal = {Annals of Botany},
keywords = {Dry forest,Facilitation,Germination,Local adaptation,Mexico,Nurse-plant syndrome,Pilosocereus leucocephalus,Reciprocal transplant experiment,Seedling growth,Seedling surviva},
